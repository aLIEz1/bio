<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bio.mapper.UserMapper">
    <resultMap id="loadUserByUserNameMap" type="com.example.bio.model.User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="email" property="email"/>
        <result column="is_locked" property="isLocked"/>
        <collection property="roles" javaType="java.util.Set" ofType="com.example.bio.model.Role">
            <id column="id" property="id"/>
            <result column="role_name" property="roleName"/>
        </collection>
    </resultMap>
    <select id="getOneByUsername" resultType="com.example.bio.model.User" resultMap="loadUserByUserNameMap">
        select u.id,
               u.username,
               u.password,
               u.email,
               u.is_locked,
               r.id,
               r.role_name,
               ur.user_id,
               ur.role_id
        from biography.user u,
             biography.role r,
             biography.user_role ur
        where u.username = #{username}
          and u.id = ur.user_id
          and r.id = ur.role_id;
    </select>

    <select id="getOneByEmail" resultType="com.example.bio.model.User">
        select id,
               username,
               password,
               email,
               invitation_code,
               points,
               is_locked,
               gmt_create,
               gmt_modified
        from biography.user
        where email = #{email}
    </select>

    <update id="unlockUser" parameterType="com.example.bio.model.User">
        update biography.user
        set is_locked=0
        where id = #{id}
    </update>
</mapper>
