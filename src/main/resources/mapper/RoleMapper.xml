<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bio.mapper.RoleMapper">
    <select id="getByRoleName" resultType="com.example.bio.model.Role">
        select id, role_name, is_deleted, gmt_create, gmt_modified
        from biography.role
        where role_name = #{eRole}
    </select>

    <insert id="addRole">
        <foreach collection="roles" item="item" separator=";">
            insert into biography.user_role
            values (#{userId}, #{item.id},default,default)
        </foreach>
    </insert>

    <select id="getRoleListByUserId" resultType="com.example.bio.model.Role">
        select *
        from biography.role
        where id = (select role_id from biography.user_role where user_id = #{userId})
    </select>
</mapper>
